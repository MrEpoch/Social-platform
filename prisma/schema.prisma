// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id   String  @id @map("_id") @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime

  username String  @unique
  email    String? @unique
  password String
  likedPostsId String[]

  posts    Post[] @relation("post")
  comments Comment[]
  likedPosts Post[] @relation("likedBy", fields: [likedPostsId], references: [id])
}

model Post {
  id   String  @id @map("_id") @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime

  userId String
  likedUsersId String[]
  content String
  images  String[]
  comments Comment[]

  likeCount Int @default(0)

  likedBy  User[] @relation("likedBy", fields: [likedUsersId], references: [id]) 
  user     User @relation("post", fields: [userId], references: [id])
}

model Comment {
  id   String  @map("_id") @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime

  postId  String
  userId  String
  content String
  
  user    User @relation(fields: [userId], references: [id])
  post    Post @relation(fields: [postId], references: [id])
}

